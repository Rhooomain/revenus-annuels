<body>
<h1>Simulateur Revenu Net Après Impôts</h1>

<label>Annuel Brut (€) : <input type="number" id="annuelBrut" value="50000"></label>
<label>Mensuel Brut (€) : <input type="number" id="mensuelBrut" value="4166.67"></label>
<label>Mensuel Net (€) : <input type="number" id="mensuelNet" value="3300"></label>

<label>Salarié cadre : <input type="checkbox" id="cadre" checked></label>

<div class="slider-label">
  <span>Temps de travail (%) :</span> <span id="tempsTravailValue">100%</span>
</div>
<input type="range" id="tempsTravail" min="0" max="100" value="100">

<div class="slider-label">
  <span>Prélèvement à la source (%) :</span> <span id="tauxPASValue">10%</span>
</div>
<input type="range" id="tauxPAS" min="0" max="43" value="10">

<div class="result" id="resultats">
  Net Mensuel Après Impôts : 3300 €<br>
  Net Annuel Après Impôts : 39600 €
</div>

<script>
const annuelBrutInput = document.getElementById('annuelBrut');
const mensuelBrutInput = document.getElementById('mensuelBrut');
const mensuelNetInput = document.getElementById('mensuelNet');
const cadreInput = document.getElementById('cadre');
const tempsTravailInput = document.getElementById('tempsTravail');
const tauxPASInput = document.getElementById('tauxPAS');
const resultDiv = document.getElementById('resultats');
const tempsTravailValue = document.getElementById('tempsTravailValue');
const tauxPASValue = document.getElementById('tauxPASValue');

const charges = { cadre: 0.23, nonCadre: 0.22 };

function updateFromBrut() {
    const cadre = cadreInput.checked;
    const temps = tempsTravailInput.value / 100;
    const tauxPAS = tauxPASInput.value / 100;

    let brutAnnuel = parseFloat(annuelBrutInput.value) * temps;
    let brutMensuel = parseFloat(mensuelBrutInput.value) * temps;

    let netMensuel = (brutMensuel * (1 - (cadre ? charges.cadre : charges.nonCadre))) * (1 - tauxPAS);
    let netAnnuel = netMensuel * 12;

    mensuelNetInput.value = netMensuel.toFixed(2);
    resultDiv.innerHTML = `Net Mensuel Après Impôts : ${netMensuel.toFixed(2)} €<br>Net Annuel Après Impôts : ${netAnnuel.toFixed(2)} €`;
}

function updateFromNet() {
    const cadre = cadreInput.checked;
    const temps = tempsTravailInput.value / 100;
    const tauxPAS = tauxPASInput.value / 100;

    let netMensuel = parseFloat(mensuelNetInput.value);
    let brutMensuel = netMensuel / ((1 - (cadre ? charges.cadre : charges.nonCadre)) * (1 - tauxPAS));
    let brutAnnuel = brutMensuel * 12;

    mensuelBrutInput.value = brutMensuel.toFixed(2);
    annuelBrutInput.value = brutAnnuel.toFixed(2);
    updateFromBrut();
}

annuelBrutInput.addEventListener('input', () => {
    mensuelBrutInput.value = (annuelBrutInput.value / 12).toFixed(2);
    updateFromBrut();
});

mensuelBrutInput.addEventListener('input', () => {
    annuelBrutInput.value = (mensuelBrutInput.value * 12).toFixed(2);
    updateFromBrut();
});

mensuelNetInput.addEventListener('input', updateFromNet);
cadreInput.addEventListener('change', updateFromBrut);
tempsTravailInput.addEventListener('input', () => {
    tempsTravailValue.textContent = tempsTravailInput.value + '%';
    updateFromBrut();
});
tauxPASInput.addEventListener('input', () => {
    tauxPASValue.textContent = tauxPASInput.value + '%';
    updateFromBrut();
});

updateFromBrut();
</script>
</body>
