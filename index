  body { font-family: Arial, sans-serif; margin: 20px; padding: 0; }
  h1 { font-size: 1.5em; text-align: center; margin-bottom: 20px; }
  label { display: block; margin-top: 15px; font-size: 0.95em; }
  input[type="number"], input[type="range"] { width: 100%; box-sizing: border-box; padding: 6px; margin-top: 5px; }
  input[type="checkbox"] { margin-left: 10px; }
  .slider-label { display: flex; justify-content: space-between; align-items: center; }
  .result { margin-top: 20px; font-weight: bold; font-size: 1.2em; text-align: center; padding: 15px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9; }

